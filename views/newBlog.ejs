    <script>
        tinymce.init({
            selector: '#mytextarea'
        });
        console.log('HI');
    </script>

</head>

<body>
    <div class="container" style="margin-top: 20px;">
        <form action="/blogs" method="post">
            <section>
                <label for="title">Enter title of the blog</label>
                <input type="text" name="title" id="title" placeholder="Enter title of your blog">
            </section>
            <section>
                <label for="username">Enter username:</label>
                <input type="text" name="username" id="username" placeholder="username">
            </section>
            <section>
                <label for="blogtext">Enter the text for the blog</label>
                <br>
                <textarea name="blogtext" id="mytextarea" cols="80" rows="30"></textarea>
            </section>
            <section>
                <label for="duration">Enter the estimated duration</label>
                <input type="number" name="duration" id="duration">
            </section>
            <button>Submit</button>
        </form>
    </div>
    <a href="/blogs">Enter home page</a>
