<% layout('layouts/boilerplate')%>
    <div class="container" style="background: cornsilk; min-height: 100vh; margin-top: 10px; ">
        <div style="background: rgb(2,0,36);
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(190,244,125,1) 0%, rgba(0,212,255,1) 100%); padding-top: 10px; padding-bottom: 7px ;">
            <p>
                <h1 style="text-align: center;">
                    <%= blog.title%>
                </h1>
                <blockquote class="blockquote mb-0">
                    <footer class="blockquote-footer" style="text-align: right;">
                        <%= blog.author %>
                    </footer>
                </blockquote>
            </p>
        </div>
        <div style="padding: 0 20px">
            <p>
                <%= blog.body %>
                    <blockquote class="blockquote mb-0">
                        <footer class="blockquote-footer">
                            <%= blog.author %> &nbsp; <cite title="Source Title"><%= blog.duration%> min read</cite></footer>
                    </blockquote>
            </p>
        </div>
        <div>
            <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
                <a href="/blogs/<%=blog.id%>/edit" class="btn btn-primary">Edit your blog</a>
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

    <a href="/blogs">Back to home page</a>